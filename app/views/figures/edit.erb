<p>Update Figure</p>

<form action="/figures/<%= @figure.id %>" method="post">
	<label>Name:</label>
	<p><input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></p>


	<p>Titles:</p>
  	<% Title.all.each do |title| %>
    	<p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input></p>
  	<% end %>
 	 <p>Landmarks:</p>
  	<% Landmark.all.each do |landmark| %>
    	<p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input></p>
  	<% end %>
  	<label>Create a new landmark:</label>
  	<p><input type="text" name="landmark[name]" id="new_landmark"></input></p>
  	<label>Create a new title:</label>
  	<p><input type="text" name="title[name]" id="new_title"></input></p>
  	<input type="submit" value="Edit Figure"
</form>




